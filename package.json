{
	"name": "statusbarlabel",
	"displayName": "status-bar-directory-name",
	"description": "Display root directory name in status bar if the directory contains a package.json file.",
	"version": "0.0.1",
	"icon": "images/rootfoldername.png",
	"engines": {
		"vscode": "^1.42.0"
	},
	"repository": "https://github.com/ZombieBunny/status-bar-folder-profile",
	"categories": [
		"Productivity"
	],
	"activationEvents": [
		"onCommand:extension.directoryname",
		"workspaceContains:package.json"
	],
	"author": {
		"name": "Leevashan Reddi",
		"email": "zombiebunny01@gmail.com"
	  },
	  "publisher": "Lee",
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.directoryname",
				"title": "Display directory on status bar"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
